<div class="container">
  <div class="row">
    {{!-- <h1>Eat Da Burger App</h1> --}}
    <img src="/assets/img/burger.png" alt="burger" />
    <h1 id="jumbo" class="display-4 text-center">Eat Da Burger App</h1>
  </div>
  <hr>

  <div class="row" id="add-burger">
    <div class="form-group col-md-7 text-left">
      <h2>Add a Burger</h2>
      <div class="row">
        {{!-- <label for="exampleInputPassword1">Add a Burger</label> --}}
        <div class="form-group col-md-7" id="add-burger">
          <form action="/burgers/create" method="POST">
            <input type="text" class="form-control" name="burger_name" id="exampleInputPassword1">
            <button type="submit" class="btn btn-primary">Add Da Burger!</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="row" id="burger-status">
    <div class="col-md-7 text-left">
      
        <h2>To-Be-Devoured Burgers!</h2>
        <div class="row">
        <!-- for each burger, unless devoured, output the name -->
        {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="col-md-7 text-left">
          <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
        </div>

        <div class="col-md-4 text-left">
          <form class="devour-button button-size">
            <button type="submit" id="eat-button" class="btn btn-success burger_id" value={{this.id}}>Eat Da
              Burger!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-md-4 text-center" class="task">
      <h2>Devoured Burgers!</h2>
      {{#each burger_data}}
      {{#if this.devoured}}
      <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
      {{/if}}
      {{/each}}
    </div>
  </div>

</div>